<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.unixarmy.apps.mealtimer.TimerDisplayActivity"
    tools:showIn="@layout/activity_timer_display"
    android:theme="@style/AppTheme">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <TextView android:id="@+id/firstMeal_Text"
                android:text="First meal"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="left|center_vertical"
                android:paddingBottom="@dimen/text_margin"
                android:paddingStart="@dimen/text_margin"
                />

            <TextView android:id="@+id/secondMeal_Text"
                android:text="Second meal"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_gravity="right|center_vertical"
                android:paddingEnd="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                />

            <TextView android:id="@+id/thirdMeal_Text"
                android:text="Third meal"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="left|center_vertical"
                android:paddingStart="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                />

            <TextView android:id="@+id/fourthMeal_Text"
                android:text="Fourth meal"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="right|center_vertical"
                android:paddingEnd="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                />

            <TextView android:id="@+id/fifthMeal_Text"
                android:text="Fifth meal"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="left|center_vertical"
                android:paddingStart="@dimen/text_margin"
                android:paddingBottom="@dimen/text_margin"
                />


        </GridLayout>
        <Button
            android:id="@+id/clearMeals_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_meals"
            android:onClick="clearTimers_Click"
            />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.NestedScrollView>
